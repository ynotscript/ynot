<patterns>
	<pattern>
		<id>whitespaces</id>
		<content>\s*</content>
	</pattern>
	<pattern>
		<id>any</id>
		<content>.*</content>
	</pattern>
	<pattern>
		<id>null</id>
		<content>##whitespaces##null##whitespaces##</content>
	</pattern>
	<pattern>
		<id>assignment</id>
		<content>:=</content>
	</pattern>
	<pattern>
		<id>operationSeparator</id>
		<content>@</content>
	</pattern>
	<pattern>
		<id>allowedMathChars</id>
		<content><![CDATA[:+\-<>=\!%/\^\*]]></content>
	</pattern>
	<pattern>
		<id>comment</id>
		<content>##whitespaces#####any##</content>
	</pattern>
	<pattern>
		<id>methodname</id>
		<content><![CDATA[##whitespaces##([a-zA-Z_]+\\)?[+\-<>=!a-zA-Z_%/\^\*]+[+\-<>=!0-9a-zA-Z_%/\^\*]*##whitespaces##]]></content>
	</pattern>
	<pattern>  
		<id>callname</id>
		<content><![CDATA[##whitespaces##\~[+\-<>=!a-zA-Z_%/\^\*]+[+\-<>=!0-9a-zA-Z_%/\^\*]*##whitespaces##]]></content>
	</pattern>
	<pattern>
		<id>varname</id>
		<content>##whitespaces##\$[0-9a-zA-Z_]+##whitespaces##</content>
	</pattern>
	<pattern>
		<id>varnames</id>
		<content>##varname##(,##varname##)*</content>
	</pattern>
	<pattern>
        <id>allocation</id>
        <content><![CDATA[##varnames####assignment####whitespaces##[0-9"{\?]+##any##]]></content>
    </pattern>
	<pattern>
		<id>parameters</id>
		<content>##whitespaces##[^\s]+##any####whitespaces##</content>
	</pattern>
	<pattern>
		<id>incr</id>
		<content>##whitespaces##\+\+##whitespaces##</content>
	</pattern>
	<pattern>
		<id>decr</id>
		<content>##whitespaces##--##whitespaces##</content>
	</pattern>
	<pattern>
		<id>operation</id>
		<content><![CDATA[##operationSeparator##[+\-<>=!a-zA-Z_%/\^\*]+[+\-<>=!0-9a-zA-Z_%/\^\*]*##operationSeparator##]]></content>
	</pattern>
	<pattern>
		<id>enteringParametersBlock</id>
		<content>##whitespaces##\(##whitespaces##</content>
	</pattern>
	<pattern>
		<id>existingParametersBlock</id>
		<content>##whitespaces##\)##whitespaces##</content>
	</pattern>
	<pattern>
		<id>parametersBlock</id>
		<content>##enteringParametersBlock####parameters####existingParametersBlock##</content>
	</pattern>	
	<pattern>
		<id>emptyParametersBlock</id>
		<content>##enteringParametersBlock####existingParametersBlock##</content>
	</pattern>
</patterns>