<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${com.ynotscript.version}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.parent.groupId}:ynot-vm</include>
			</includes>
			<binaries>
				<outputDirectory>ynot</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.parent.groupId}:ynot-lang</include>
			</includes>
			<binaries>
				<outputDirectory>ynot/dictionaries/ynot/lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.parent.groupId}:ynot-impl</include>
			</includes>
			<binaries>
				<unpack>false</unpack>
				<outputDirectory>ynot/lib</outputDirectory>
				<dependencySets>
					<dependencySet />
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.parent.groupId}:ynot-impl</include>
			</includes>
			<includeSubModules>false</includeSubModules>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>ynot/config</outputDirectory>
						<directory>src/test/resources</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.parent.groupId}:ynot-vm</include>
			</includes>
			<includeSubModules>false</includeSubModules>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>ynot/config</outputDirectory>
						<directory>src/test/resources</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.parent.groupId}:ynot-build</include>
			</includes>
			<includeSubModules>false</includeSubModules>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>ynot/dictionaries</outputDirectory>
						<directory>src/main/resources/dictionaries</directory>
					</fileSet>
					<fileSet>
						<outputDirectory>ynot/examples</outputDirectory>
						<directory>src/main/resources/examples</directory>
					</fileSet>
					<fileSet>
						<outputDirectory>ynot/res</outputDirectory>
						<directory>src/main/resources/res</directory>
					</fileSet>
					<fileSet>
						<outputDirectory>ynot</outputDirectory>
						<directory>src/main/resources/files</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>
